<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SplashBackground"
    tools:context="savar.app_saba2.Splash">

    <ImageView
        android:id="@+id/Splash_behineh"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/behineh2" />

    <ImageView
        android:id="@+id/Splash_shaksiat"
        android:layout_width="100dp"
        android:layout_height="220dp"
        android:layout_above="@+id/Splash_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:src="@drawable/shakhsiat"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/Splash_txt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/Spalsh_txt"
        android:textColor="@color/black"
        android:textSize="20dp" />
</RelativeLayout>
